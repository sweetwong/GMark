<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/text_main</item>
        <item name="hintTextColor">@color/text_sub</item>
        <item name="background">@color/ck_transparent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/white</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="SearchTextStyle" parent="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="EditorTextStyle">
        <item name="android:background">@color/ck_transparent</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

</resources>