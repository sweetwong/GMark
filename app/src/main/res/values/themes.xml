<resources>
    <!-- Base application theme. -->
    <style name="Theme.GMark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary colors. -->
        <item name="colorPrimary">@color/ck_blue600</item>
        <item name="colorPrimaryDark">@color/ck_white</item>
        <item name="colorAccent">@color/ck_blue800</item>
        <item name="colorRipple">@color/ck_blue600_10</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Window color -->
        <item name="android:windowBackground">@color/ck_white</item>
        <!-- Customize your theme here. -->
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="Theme.GMark.BLUE">
        <item name="colorPrimary">@color/blue_main</item>
        <item name="colorAccent">@color/blue_main</item>
        <item name="colorRipple">@color/blue_ripple</item>
    </style>

    <style name="Theme.GMark.RED">
        <item name="colorPrimary">@color/red_main</item>
        <item name="colorAccent">@color/red_main</item>
        <item name="colorRipple">@color/red_ripple</item>
    </style>

    <style name="Theme.GMark.YELLOW">
        <item name="colorPrimary">@color/yellow_main</item>
        <item name="colorAccent">@color/yellow_main</item>
        <item name="colorRipple">@color/yellow_ripple</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_main</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/shape_alert_dialog_background</item>
    </style>

</resources>