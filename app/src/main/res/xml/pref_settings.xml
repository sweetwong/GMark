<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="General" />

    <Preference
        app:iconSpaceReserved="false"
        app:key="language"
        app:summary="English"
        app:title="Language" />

    <Preference
        app:iconSpaceReserved="false"
        app:key="theme_color"
        app:summary="Blue"
        app:title="Theme color" />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="View" />

    <EditTextPreference
        app:iconSpaceReserved="false"
        app:key="text_size"
        app:summary="16sp"
        app:title="Text size" />

    <SwitchPreference
        app:iconSpaceReserved="false"
        app:key="@string/pref_hide_toolbar"
        app:persistent="true"
        app:summary="You can open settings by drawer layout again"
        app:title="Hide toolbar" />

    <SwitchPreference
        app:iconSpaceReserved="false"
        app:key="@string/pref_hide_tab_layout"
        app:persistent="true"
        app:title="Hide tab layout" />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="Git Profile" />

    <EditTextPreference
        app:iconSpaceReserved="false"
        app:key="user_name"
        app:persistent="true"
        app:title="User name"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        app:iconSpaceReserved="false"
        app:key="user_email"
        app:persistent="true"
        app:title="User Email"
        app:useSimpleSummaryProvider="true" />

</PreferenceScreen>